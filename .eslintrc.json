{
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {},
            {
                // pass eslint built-in prettier rules
                // to prettier extension rules file
                "usePrettierrc": true,
                "fileInfoOptions": {
                    "withNodeModules": true
                }
            }
        ]
    }
}